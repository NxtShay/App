<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Question.Recommandation">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="This is your footprint:"
            android:textColor="@color/green2"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/footprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="foodprint"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/green2"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/recommenthead"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/recommenthead"
            android:layout_width="236dp"
            android:layout_height="90dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="Here are some recommandations for you to minimize your footprint:"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/Recommandation1"
            app:layout_constraintEnd_toEndOf="@+id/footprint"
            app:layout_constraintStart_toStartOf="@+id/footprint"
            app:layout_constraintTop_toBottomOf="@+id/footprint" />

        <TextView
            android:id="@+id/Recommandation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="Recommandation1"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/Recommandation2"
            app:layout_constraintEnd_toEndOf="@+id/recommenthead"
            app:layout_constraintStart_toStartOf="@+id/recommenthead"
            app:layout_constraintTop_toBottomOf="@+id/recommenthead" />

        <TextView
            android:id="@+id/Recommandation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="Recommandation2"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/Recommandation3"
            app:layout_constraintEnd_toEndOf="@+id/Recommandation1"
            app:layout_constraintStart_toStartOf="@+id/Recommandation1"
            app:layout_constraintTop_toBottomOf="@+id/Recommandation1" />

        <TextView
            android:id="@+id/Recommandation3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="Recommandation3"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/Recommandation4"
            app:layout_constraintEnd_toEndOf="@+id/Recommandation2"
            app:layout_constraintStart_toStartOf="@+id/Recommandation2"
            app:layout_constraintTop_toBottomOf="@+id/Recommandation2" />

        <TextView
            android:id="@+id/Recommandation4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="Recommandation4"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/Recommandation5"
            app:layout_constraintEnd_toEndOf="@+id/Recommandation3"
            app:layout_constraintStart_toStartOf="@+id/Recommandation3"
            app:layout_constraintTop_toBottomOf="@+id/Recommandation3" />

        <TextView
            android:id="@+id/Recommandation5"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="32dp"
            android:text="Recommandation5"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/backHomebutton"
            app:layout_constraintEnd_toEndOf="@+id/Recommandation4"
            app:layout_constraintStart_toStartOf="@+id/Recommandation4"
            app:layout_constraintTop_toBottomOf="@+id/Recommandation4" />

        <Button
            android:id="@+id/backHomebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="HOME"
            app:layout_constraintEnd_toEndOf="@+id/Recommandation5"
            app:layout_constraintStart_toStartOf="@+id/Recommandation5"
            app:layout_constraintTop_toBottomOf="@+id/Recommandation5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>